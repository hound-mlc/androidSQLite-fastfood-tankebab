<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCarta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/descarga">

    <ListView
        android:id="@+id/listCarta"
        android:layout_width="390dp"
        android:layout_height="188dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tag2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llDetails"
        android:layout_width="383dp"
        android:layout_height="362dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tag"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listCarta">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nombre kebab"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="17dp"
            android:text="Ingredientes"
            android:textColor="@android:color/black"
            android:textSize="21sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btndefault"
        android:text="Pedir"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>